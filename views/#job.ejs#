  var start = _.pluck(job.Bookings, 'start');
  var uniqStart = _.uniq(start);

  for(var j=0; j < uniqStart.length; j++) {

      // ============= //
      // UNIQ POSITION //
      // ============= //

      var posObj = _.where(job.Bookings, { start: uniqStart[j] });
      var pos = _.pluck(posObj, 'position');
